{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["vite/client", "firefox-webext-browser"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": false,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@web/*": ["src/web/*"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
