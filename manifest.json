{
  "manifest_version": 3,
  "name": "Workspaces",
  "version": "0.0.1",
  "author": "Kasukabe Tsumugi",
  "homepage_url": "https://github.com/baendlorel/firefox-workspaces",
  "description": "Manage tabs in workspaces similar to Microsoft Edge's Collections feature",
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "dist/manager.js"
    ],
    "type": "module"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Workspaces Manager"
  },
  "icons": {
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "workspaces@example.com",
      "strict_min_version": "100.0"
    }
  }
}