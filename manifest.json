{
  "manifest_version": 2,
  "name": "Workspaces",
  "version": "0.0.1",
  "description": "Manage tabs in workspaces similar to Microsoft Edge's Collections feature",
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "dist/manager.js",
      "dist/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "dist/popup.html",
    "default_title": "Workspaces Manager",
    "default_icon": {
      "16": "src/icons/icon-16.png",
      "32": "src/icons/icon-32.png",
      "48": "src/icons/icon-48.png",
      "128": "src/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon-16.png",
    "32": "src/icons/icon-32.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "dist/*",
    "assets/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "workspaces@example.com",
      "strict_min_version": "100.0"
    }
  }
}